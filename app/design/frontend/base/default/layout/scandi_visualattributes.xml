<layout version="0.1.0">

    <PRODUCT_TYPE_configurable>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>scandi/visualattributes/js/visualattributes.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>scandi/visualattributes/css/visualattributes.css</name>
            </action>
        </reference>
        <reference name="product.info.options.configurable">
            <block type="core/text_list" name="js.templates">
                <block type="core/template" name="containerTemplate" template="scandi/visualattributes/js/container.phtml"/>
                <block type="core/template" name="itemTemplate" template="scandi/visualattributes/js/option.phtml"/>
                <block type="core/template" name="emptyItemTemplate" template="scandi/visualattributes/js/option/empty.phtml"/>
            </block>
        </reference>
    </PRODUCT_TYPE_configurable>

    <catalog_category_layered>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>scandi/visualattributes/css/visualattributes.css</name>
            </action>
        </reference>
    </catalog_category_layered>
</layout>